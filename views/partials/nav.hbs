                                    <li data-category="nav_tier3_{{stringReplace @key}}"><a href="#tier2" class="d-block py-1">{{@key}}</a></li>
                                {{/each}}
                            </ul>

                            {{#if .}}
                                {{#each .}}
                                    {{#if this.length}}
                                        <ul data-category="nav_tier3_{{stringReplace @key}}" class="nav_links nav_tier3 list-unstyled m-0 p-0">
                                            {{#each .}}
                                                <li data-category="nav_tier4_{{stringReplace this}}"><a href="#tier3" class="d-block py-1">{{this}}</a></li>
                                            {{/each}}
                                        </ul>
