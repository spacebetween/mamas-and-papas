<footer class="footer text-md-center bg-white">
    {{> subscribe}}
    <div class="row pt-4 js-accordion">
        {{#each (theme code="footer_links")}}
            <div class="col-md {{#if options.hideDesktop}}d-none d-md-block{{/if}}">
                <h4 class="footer_heading m-0 py-4 py-md-3 js-accordionTitle">{{name}}</h4>
                <ul class="footer_links list-unstyled m-0 p-4 p-md-0">
                    {{#each links}}
                        <li><a href="#">{{.}}</a></li>
                    {{/each}}
                </ul>
            </div>
        {{/each}}
    </div>

    <div class="row">
        <div class="col text-center m-4 mt-md-7 footer_socialLinks">
            {{#each (theme code="social_links")}}
                <i class="fa p-1 fa-{{.}}" aria-hidden="true"></i>
            {{/each}}
        </div>
    </div>
</footer>
