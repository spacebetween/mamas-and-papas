<header>
    {{> topInfoBar}}
    <div class="container-fluid">
        {{> header color="black" background="white"}}
    </div>
</header>
{{> slidePanel block="nav"}}
{{> boxBanner }}
{{> breadcrumb}}

<div class="products">
    <div class="row">
        <div class="col py-3 text-right">
            <i class="icon grid grid-4x4 cursor-pointer ml-2 js-productPanel active" data-state="small" aria-hidden="true"></i>
            <i class="icon grid grid-3x3 cursor-pointer ml-2 js-productPanel" data-state="large" aria-hidden="true"></i>
        </div>
    </div>
    <div class="row no-gutters">
        {{#each (theme code="products")}}
            <div class="col-md-3 col-sm-6">
                {{> productCard}}
            </div>
        {{/each}}
    </div>
</div>

{{> footer}}
{{> scripts}}